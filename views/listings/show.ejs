<% layout("layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
   
    <h3 class="offset-2">Listing Details </h3>
    </div>
    <a href="/listings/<%= listing._id %>" class="listing-link"></a>
    <div class="card col-6 offset-2">
        <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image" />
      <div class="card-body">
        <p class="card-text">
            <b><%= listing.title %></b><br />
            <%= listing.description %><br />
            <%= listing.price ? listing.price.toLocaleString ('en-IN', { style: 'currency', currency: 'INR', minimumFractionDigits: 0, maximumFractionDigits: 0 }) : "" %> <br />
            <%= listing.location %><br />
            <%= listing.country %>
        </p>
      </div>
    </div>
</div>

<div class="btns">
        <a href="/listings/<%= listing._id %>/edit"  class="btn btn-dark col-0.5 offset-3 edit-btn" >Edit </a>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-dark offset-4">Delete </button>
        </form>
</div>
    

